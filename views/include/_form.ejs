<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
	<div class="new_user">
		<div class="form-group">
			<label for="toy" class="text-dark">Product</label>
			<input type="hidden" name="id" value="" />
			<input type="text" name="toy" value="" placeholder="Add product name" />
		</div>
		<div class="form-group">
			<label for="Price" class="text-dark">Price</label>
			<input type="text" name="price" value="" placeholder="Add product price" />
		</div>

		<div class="form-group">
			<label for="gender" class="text-dark">Status</label>
			<div class="radio inline">
				<input type="radio" id="radio-4" name="status" value="In Stock" />
				<label for="radio-4" class="radio-label">In Stock</label>
			</div>
			<div class="radio inline">
				<input type="radio" id="radio-5" name="status" value="Out of Stock" />
				<label for="radio-5" class="radio-label">Out of Stock</label>
			</div>
		</div>

		<div class="form-group">
			<button type="submit" class="btn text-dark update">Save</button>
		</div>
	</div>
</form>